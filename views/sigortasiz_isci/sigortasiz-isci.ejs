                    <h2 class="dilekce-baslik">SİGORTASIZ İŞÇİLER İÇİN DİLEKÇE OLUŞTURMA</h2>
                </div>
            </div>
        </div>

        <section class="form-area">
            <div class="container py-4 ana">
                <div class="row">

                    <div class="row">
                        <div class="btn-group" data-toggle="buttons">
                            <label id="ediyorumBtn" class="btn btn-secondary">
                                İşyerinde Çalışıyorum
                            </label>
                            <label id="etmiyorumBtn" class="btn btn-secondary">
                                İşyerinden Ayrıldım
                            </label>
                        </div>
                        <script>
                            document.getElementById('ediyorumBtn').addEventListener('click', function () {
                                this.classList.add('active');
                                document.getElementById('etmiyorumBtn').classList.remove('active');


                                const aralikInputs = document.querySelectorAll('.aralik input');
                                aralikInputs.forEach(input => {
                                    input.removeAttribute('disabled');
                                });
                            });

                            document.getElementById('etmiyorumBtn').addEventListener('click', function () {
                                this.classList.add('active');
                                document.getElementById('ediyorumBtn').classList.remove('active');


                                const aralikInputs = document.querySelectorAll('.aralik input');
                                aralikInputs.forEach(input => {
                                    input.setAttribute('disabled', 'disabled');
                                });
                            });

                        </script>
                    </div>


                </div>
