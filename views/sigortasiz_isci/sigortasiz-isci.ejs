                                </select>

                                <script>

                                    const sehirler = ["Adana", "Ankara", "Antalya", "Adıyaman"];
                                    sehirler.sort();

                                    const select = document.getElementById("sehirler");
                                    sehirler.forEach(sehir => {
                                        const option = document.createElement("option");
                                        option.value = sehir.toLowerCase();
                                        option.text = sehir;
                                        select.appendChild(option);
                                    });
                                </script>
                                <div class="form-group">
                                    <label for="">SGK'de İşlem Gören Dosya Sicil Numarası</label>
                                    <input type="number" class="form-control" id="" placeholder="Örn:1234567">
                                </div>
                                <div class="form-group">
                                    <label for="">İşverenin veya Şirketin İsmi </label>
                                    <input type="" class="form-control" id="" placeholder="Örn: loremipsum ltd. şti.">
                                </div>
                                <div class="form-group">
